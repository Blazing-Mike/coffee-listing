---
const { name, price, image, popular, votes, ratings, available } = Astro.props;
---

<div class="font-primary relative">
  <img src={image} alt="coffee" class="rounded-xl w-[300px] h-full" />
  {
    popular && (
      <span class="bg-yellow w-20 flex justify-center capitalize font-semibold text-center py-1 rounded-2xl absolute text-sm text-black top-3 left-4">
        popular
      </span>
    )
  }
  <div class="flex justify-between mt-3 items-start">
    <p class="text-light-pink text-base">{name}</p>
    <div class="bg-lemon rounded-md font-semibold text-black px-2 py-1 text-xs">
      {price}
    </div>
  </div>
  <div class="flex items-end mt-4 justify-between">
    <div class="flex gap-1 justify-start">
      <p class="">
        {
          ratings !== null ? (
            <img src="/Star_fill.svg" alt="" class="" />
          ) : (
            <img src="/Star.svg" alt="" class="" />
          )
        }
      </p>

      <p class="font-semibold text-light-pink">{ratings}</p>

      <span class="text-light-grey font-medium"
        >{votes > 0 ? `(${votes} votes)` : "No ratings"}</span
      >
    </div>
    <div>{available == false && <p class="text-red">Sold out</p>}</div>
  </div>
</div>
